rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete their own documents.
    // The {userId} wildcard in the path ensures that users can only access
    // files within their own folder.
    match /documents/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
