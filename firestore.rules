rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check if the user is an Admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "admin@flowidq.com";
    }

    // Users can read and create their own user document
    match /users/{userId} {
      allow read, create: if isOwner(userId);
    }
    
    // Users can manage their own documents
    match /users/{userId}/documents/{documentId} {
        allow get, list, create, update, delete: if isOwner(userId);
    }

    // Anyone can read public queue information
    match /queues/{queueId} {
      allow get, list: if request.auth != null;
      // Admins and the system can update queue details
      allow update: if isAdmin();
    }
    
    // Authenticated users can create their own queue entries
    match /queues/{queueId}/queueEntries/{entryId} {
        allow create: if request.auth != null;
        // Admins can read the full list of entries for management
        allow get, list: if isAdmin();
    }
  }
}
